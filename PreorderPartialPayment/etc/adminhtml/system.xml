<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="preorder" translate="label" sortOrder="200">
            <label>Preorder Extension</label>
        </tab>
        <section id="preorder" translate="label" type="text" sortOrder="110" showInDefault="1" showInWebsite="1"
                 showInStore="1">
            <class>separator-top</class>
            <label>Preorder Configuration</label>
            <tab>preorder</tab>
            <resource>Emizentech_PreorderPartialPayment::Config_Preorder</resource>
            <group id="general" translate="label" type="text" sortOrder="120" showInDefault="1" showInWebsite="1"
                   showInStore="1">
                <label>Preorder Partial Payment Configuration</label>
                <field id="preorder_percent" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Partial Payment %</label>
                    <comment>(Only Percentage Amount)</comment>
                </field>
            </group>
        </section>
    </system>
</config>